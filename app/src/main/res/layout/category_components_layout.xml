<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/category_btn_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Button"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:textAllCaps="false"
        android:scrollHorizontally="true"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/category_imgbtn_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/category_imgbtn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_btn_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/category_btn_category"
        android:src="@drawable/ic_delete" />

    <ImageButton
        android:id="@+id/category_imgbtn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/category_btn_category"
        app:layout_constraintEnd_toStartOf="@+id/category_imgbtn_delete"
        app:layout_constraintTop_toTopOf="@+id/category_btn_category"
        android:src="@drawable/ic_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>