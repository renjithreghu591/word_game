<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/category_imgbtn_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >



        <ProgressBar
            android:id="@+id/category_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:progress="50"
            android:progressDrawable="@drawable/bg_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category_txt_outof"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="0"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/category_txt_categoryname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeMinTextSize="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Category"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/category_txt_outof"
            app:layout_constraintStart_toEndOf="@+id/category_txt_progcount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category_txt_progcount"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="0"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/category_imgbtn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/progress_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progress_layout"
        android:src="@drawable/ic_delete" />

    <ImageButton
        android:id="@+id/category_imgbtn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/progress_layout"
        app:layout_constraintEnd_toStartOf="@+id/category_imgbtn_delete"
        app:layout_constraintTop_toTopOf="@+id/progress_layout"
        android:src="@drawable/ic_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>